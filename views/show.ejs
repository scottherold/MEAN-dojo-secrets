<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <title>Dojo Secrets</title>
    </head>
    <body class="bg-dark">
        <div class="container">
            <div class="row justify-content-center py-5">
                <div class="col-10 border border-light rounded pb-4">
                    <div class="row justify-content-center py-3">
                        <h3 class="text-light">Welcome to Dojo Secrets</h3>
                    </div>
                    <div class="row justify-content-center py-3">
                        <h4 class="text-light">Comment on this Secret</h4>
                    </div>
                    <div class="row justify-content-center mb-3">
                        <div class="col-10 px-4">
                            <h6 class="text-light"><%= secret.content %></h6>
                        </div>
                    </div>
                    <% for (var comment of secret.comments) { %>
                        <div class="row justify-content-end my-1">
                            <div class="col-10">
                                <div class="row justify-content-start">
                                    <p class="text-light"><%= comment.content %></p></a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <form action="/secrets/<%= user_id %>/<%= secret._id %>/comment" method="POST">
                        <div class="row justify-content-center px-4 pb-2">
                            <% if (messages.postErrors) { %>
                                <div class="col-12">
                                <% for (var x of messages.postErrors) { %>
                                    <p class="text-danger text-center"><%= x %></p>
                                <% } %>
                                </div>
                            <% } %>
                            <div class="col-10">
                                <div class="row justify-content-start mb-1">
                                    <textarea name="content" rows="3" class="w-100 text-light rounded bg-dark" placeholder="Leave your comment here!"></textarea>
                                </div>
                                <div class="row justify-content-end">
                                    <button type="submit" class="btn btn-dark border border-light">Submit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="row justify-content-center">
                        <a href="/secrets" class="btn btn-dark btn-sm border-light rounded text-white text-center mx-2">Home</a>
                        <a href="/users/logout" class="btn btn-dark btn-sm border-light rounded text-white text-center mx-2">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>